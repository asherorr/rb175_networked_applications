<% @title = "New Document" %>

<style>
  body {
    font-family: system-ui, sans-serif;
    margin: 2rem;
  }

  form {
    margin-top: 1rem;
  }

  label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  textarea#file_name {
    width: 250px;        /* smaller width */
    height: 1.8em;       /* small height (1 line) */
    resize: none;        /* disable manual resizing */
    font-size: 1rem;
    font-family: sans-serif;
    padding: 0.25rem 0.5rem;
  }

  button {
    margin-top: 0.75rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    cursor: pointer;
  }
</style>

<h3 style="font-weight: normal;">Add a New Document</h3>
<form action="/new_file" method="post">
  <textarea name="file_name" id="file_name"></textarea>
  <br>
  <button type="submit">Create</button>
</form>