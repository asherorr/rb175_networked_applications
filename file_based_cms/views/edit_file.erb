<% @title = params[:file_name] %>

<style>
  body {
    font-family: system-ui, sans-serif;
    margin: 2rem;
  }

  h1 {
    margin-bottom: 1rem;
  }

  textarea {
    width: 100%;
    min-height: 400px;
    resize: vertical;
    font-family: monospace;
    font-size: 1rem;
    line-height: 1.5;
    padding: 0.75rem;
  }

  button {
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    cursor: pointer;
  }
</style>

<h1>Editing: <%= @title %></h1>

<form action="/data/<%= params[:file_name] %>/edit_file" method="post">
  <textarea name="content" id="content"><%= @contents %></textarea>
  <br>
  <button type="submit">Save Changes</button>
</form>

<script>
  // Auto-expand textarea to fit content
  const textarea = document.getElementById("content");
  textarea.style.height = "auto";
  textarea.style.height = textarea.scrollHeight + "px";

  // Keep resizing dynamically while typing
  textarea.addEventListener("input", () => {
    textarea.style.height = "auto";
    textarea.style.height = textarea.scrollHeight + "px";
  });
</script>

