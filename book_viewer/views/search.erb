<h2 class="content-subhead">Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>


<% if params[:query] %>
  <% if @results.empty? %>
    <p>Sorry, no matches were found.</p>
  <% else %>
    <h2 class="content-subhead">Results for '<%= params[:query]%>'</h2>

    <ul>
      <% @results.each do |result| %>
        <li><%= result[:name] %></li>
          <ul>
          <% paragraphs_matching(result[:contents], params[:query]).each do |paragraph| %>
            <li>
              <a href="/chapters/<%= result[:number] %>#<%= paragraph[0] %>" class="pure-menu-link">
                <%= highlight(paragraph[1], params[:query]) %>
              </a>
          <% end %>
          </ul>
      <% end %>
    </ul>
  <% end %>
<% end %>