<ul id="lists">
  <% @lists_with_idx.each do |list, original_index| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= original_index %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_completed_count(list) %> / <%= todos_count(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>

